{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "types/"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}